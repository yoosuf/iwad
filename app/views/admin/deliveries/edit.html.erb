<%= form_for @delivery, url: "#{admin_deliveries_path}/#{@delivery.id}", :html => {:class => 'form'}  do |f| %>
    <%= render partial: "/shared/validation_errors", locals: { resource: @delivery } %>
    <!-- Main content -->
<section class="content">

    <div class="row">
        <section class="col-lg-12 connectedSortable">
            <!-- User Stats-->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs pull-right">
                    <li class="pull-left header"><i class="fa fa-edit"></i> Edit Delivery</li>
                </ul>
                <br />

                <form class="form">
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-xs-12" for="offrname">Delivery ID</label>

                                <div class=" col-lg-7 col-xs-12">
                                    <label><%= @delivery.id %></label>
                                </div>
                            </div>
                        </div><!-- ./col -->

                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-xs-12" for="deliclientname">Client Name</label>

                                <div class="col-lg-7 col-xs-12">
                                    <%= f.text_field :name, autofocus: true, class:'form-control deliverycname', :required => '', placeholder:'Enter client name' %>
                                </div>
                            </div>
                        </div><!-- ./col -->
                    </div><!-- /.row -->
                    <br />

                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-xs-12" for="delifrom">From</label>

                                <div class="col-lg-7 col-xs-12">
                                    <%= f.text_area :from_location, autofocus: true, class:'form-control deliveryfrom', :required => '', :placeholder => 'Enter starting point address' %>

                                </div>
                            </div>
                        </div><!-- ./col -->

                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-xs-12" for="delito">To</label>

                                <div class="col-lg-7 col-xs-12">
                                    <%= f.text_area :to_location, autofocus: true, class:'form-control deliveryto', :required => '', :placeholder => 'Enter destination address' %>
                                </div>
                            </div>
                        </div><!-- ./col -->
                    </div><!-- /.row -->
                    <br />

                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="col-lg-3 col-xs-12">Driver Name</label>

                                <div class="col-lg-7 col-xs-12">
                                    <label><%= @delivery.driver.nil? ? '' : @delivery.driver.name %></label>
                                </div>
                            </div>
                        </div><!-- ./col -->

                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="col-lg-3 col-xs-12">Vehicle</label>

                                <div class="col-lg-7 col-xs-12">
                                    <label><%= @delivery.delivery_vehicle.nil? ? '' : @delivery.delivery_vehicle.name %></label>
                                </div>
                            </div>
                        </div><!-- ./col -->
                    </div><!-- /.row -->
                    <br />

                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="col-lg-3 col-xs-12">Cost</label>

                                <div class="col-lg-7 col-xs-12">
                                    <label><%= number_to_currency(@delivery.cost, unit: "Â£", separator: ".", delimiter: "") %></label>
                                </div>
                            </div>
                        </div><!-- ./col -->

                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label class="col-lg-3 col-xs-12">Status</label>

                                <div class="col-lg-7 col-xs-12">
                                    <label><%= @delivery.getStringDeliveryStatus %></label>
                                </div>
                            </div>
                        </div><!-- ./col -->
                    </div><!-- /.row -->
                </form>
                <br />
            </div>
        </section>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-1">
            <button id="deliok" type="submit" class="btn btn-primary btn-block">Ok</button>
        </div>
    </div>
    <br />
</section>
<% end %>
