<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <h4>Admin Notifications</h4>
        </div>
       
    </div>
    <br />
    <div class="row content-height">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                <tr>

                    <th class="col-xs-1">Name</th>
                    <th class="col-xs-2">Email</th>
<!--                     <th class="col-xs-1">Timezone</th>-->
                     <!-- <th class="col-xs-2">Status</th> -->
                    <th class="col-xs-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                <%
                   i = 0
                   styleClass = 'success'
                   @admin_notifications.each do |admin_notification|
                     i =i+1

                     if i%2 == 0
                       styleClass = 'info'
                     end
                %>
                
                <tr class="success">
                    <td class="col-xs-2"><%= admin_notification.name %></td>
                    <td class="col-xs-2"><%= admin_notification.email %></td>
                    <!-- <td class="col-xs-1"><%= admin_notification.time_zone %></td> -->
                    <!-- <td class="col-xs-2"><%= admin_notification.status== true ? 'Active' : 'In active' %></td> -->
                    <td class="col-xs-2">
                        <div class="col-xs-6">
                            <a href="<%= url_for :controller => 'admin_notifications', :action => 'edit', :id => admin_notification.id %>"><i class="glyphicon glyphicon-edit"></i>&nbsp;Edit</a>


                            <%= link_to 'Delete', admin_admin_notification_path(admin_notification.id),class: 'modified', method: :delete, data: { confirm: 'Are you sure?' } %>

                        </div>
                    </td>
                </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-1">
            <a href="<%= url_for :controller => 'admin_notifications', :action => 'new' %>"> <button id="offradd" type="button" class="btn btn-success btn-block">Add</button></a>
        </div>
    </div>
</section>



