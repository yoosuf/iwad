<!DOCTYPE html>
<html>
<head>
    <title>iWad Admin</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <%= csrf_meta_tags %>
</head>
<%
   classname ='hold-transition skin-blue sidebar-mini'
   if devise_mapping.registerable? &&  controller_name != 'registrations'
     classname = 'login-wrapper'
   end
%>
<!-- starting body -->
<body class="<%= classname %>">
<% if classname == 'login-wrapper' %>
    <%= yield %>
<% else %>
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo logo-bg">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><img src="assets/images/logo-mini.png" /></span>
                <!-- logo for regular state and mobile devices
                <span class="logo-lg pull-left" media="(max-width: 1920px)"><img src="dist/img/logo-150.png" /></span> -->
                <!-- logo for mobile devices -->
                <span class="logo-lg pull-left"><img src="assets/images/logo-150.png" /></span>
            </a>

            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top navbar-color" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <span class="main-title title-color">Admin Panel</span>
            </nav>
        </header>

        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="assets/images/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>

                    <div class="pull-left info">
                        <p>Alexander Pierce</p>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">Management</li>
                    <li class="active">
                        <a href="#">
                            <i class="fa fa-tachometer"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="fa fa-users"></i>
                            <span>Drivers</span>
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="fa fa-archive"></i>
                            <span>Deliveries</span>
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="fa fa-tags"></i>
                            <span>Offers</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content content-bg-alt">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <!-- small box -->
                        <a href="#">
                            <div class="small-box bg-red">
                                <div class="inner">
                                    <h3>320</h3>
                                    <p>Total Users</p>
                                </div>

                                <div class="icon">
                                    <i class="ion-ios-people"></i>
                                </div>
                            </div>
                        </a>
                    </div><!-- ./col -->

                    <div class="col-lg-3 col-xs-6">
                        <!-- small box -->
                        <a href="#">
                            <div class="small-box bg-orange">
                                <div class="inner">
                                    <h3>110</h3>
                                    <p>Total Drivers</p>
                                </div>

                                <div class="icon">
                                    <i class="ion-model-s"></i>
                                </div>
                            </div>
                        </a>
                    </div><!-- ./col -->

                    <div class="col-lg-3 col-xs-6">
                        <!-- small box -->
                        <a href="#">
                            <div class="small-box bg-aqua">
                                <div class="inner">
                                    <h3>875</h3>
                                    <p>Total Deliveries</p>
                                </div>

                                <div class="icon">
                                    <i class="ion-android-cart"></i>
                                </div>
                            </div>
                        </a>
                    </div><!-- ./col -->

                    <div class="col-lg-3 col-xs-6">
                        <!-- small box -->
                        <a href="#">
                            <div class="small-box bg-green">
                                <div class="inner">
                                    <h3><sup>£</sup>1,500,000</h3>
                                    <p>Total Deliveries</p>
                                </div>

                                <div class="icon">
                                    <i class="ion-cash"></i>
                                </div>
                            </div>
                        </a>
                    </div><!-- ./col -->
                </div><!-- /.row -->
                <br />

                <!-- Main row -->
                <div class="row">
                    <!-- Left col -->
                    <section class="col-lg-6 connectedSortable">
                        <!-- User Stats-->
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="pull-left header"><i class="fa fa-user"></i> User Statistics</li>
                            </ul>

                            <div class="no-padding left-margin">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>New Users</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>25</h3>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>B2B Users</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>150</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <!-- Delivery Overview-->
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="pull-left header"><i class="fa fa-shopping-cart"></i> Delivery Overview</li>
                            </ul>

                            <div class="no-padding left-margin">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>Today</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>58</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>This Year</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>268</h3>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>This Month</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>105</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Right col -->
                    <section class="col-lg-6 connectedSortable">
                        <!-- Driver Stats-->
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="pull-left header"><i class="fa fa-users"></i> Driver Statistics</li>
                            </ul>

                            <div class="no-padding left-margin">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>Active Drivers</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>75</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>Pending Drivers</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>101</h3>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>Inactive Drivers</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>27</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <!-- Earning Statistics -->
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="pull-left header"><i class="fa fa-bar-chart"></i> Earning Statistics</li>
                            </ul>

                            <div class="no-padding left-margin">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>Today</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>£10,050</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>This Year</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>£96,100</h3>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <h3>This Month</h3>
                                    </div>

                                    <div class="col-lg-3">
                                        <h3>£65,000</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div><!-- /.row -->
            </section>
        </div><!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.0
            </div>
            <strong>Copyright &copy; 2015 iWAD.</strong> All rights reserved.
        </footer>
    </div><!-- ./wrapper -->
<% end %>


<script>
    $.widget.bridge('uibutton', $.ui.button);
</script>
</body>
<!-- ending body -->
</html>
