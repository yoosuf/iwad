
<!DOCTYPE html>
<html>
<head>
    <title>iWad Admin</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
    <script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyDuo-zoqhnTR569gqtHCslTp9u-itwD0tk&libraries=geometry"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <%= csrf_meta_tags %>
</head>


<body>
<div class="wrapper">
    <header class="main-header">

        <a href="#" class="logo logo-bg">
            <span class="logo-mini"><%= image_tag "logo-mini.png" %></span>

            <span class="logo-lg pull-left"><%= image_tag "logo-150.png" %></span>
        </a>


        <nav class="navbar navbar-static-top navbar-color" role="navigation">

            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <span class="main-title title-color">Admin Panel</span>
        </nav>
    </header>


    <aside class="main-sidebar">

        <section class="sidebar">

            <div class="user-panel">
                <div class="pull-left image">
					<%= image_tag "user2-160x160.jpg", :class => 'img-circle' %>
                </div>
				
                <div class="pull-left info">
                    <p>Admin</p>
                </div>
            </div>
            <ul class="sidebar-menu">
                <li class="header">Management</li>
                <li class="<%= controller.controller_name == 'dashboard' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/dashboard', :action => 'index' %>">
                        <i class="fa fa-tachometer"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="<%= controller.controller_name == 'drivers' &&  controller.action_name != 'map' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/drivers', :action => 'index' %>">
                        <i class="fa fa-users"></i>
                        <span>Drivers</span>
                    </a>
                </li>



                <li class="<%=  controller.action_name == 'map' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/drivers', :action => 'map' %>">
                        <i class="fa fa-users"></i>
                        <span>View Drivers</span>
                    </a>
                </li>


                <li class="<%= controller.controller_name == 'deliveries' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/deliveries', :action => 'index' %>">
                        <i class="fa fa-archive"></i>
                        <span>Deliveries</span>
                    </a>
                </li>

                <li class="<%= controller.controller_name == 'users' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/users', :action => 'index' %>">
                        <i class="fa fa-user"></i>
                        <span>Users</span>
                    </a>
                </li>

                <li class="<%= controller.controller_name == 'offers' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/offers', :action => 'index' %>">
                        <i class="fa fa-tags"></i>
                        <span>Offers</span>
                    </a>
                </li>


                <li class="<%= controller.controller_name == 'reports' ? 'active active-bg': '' %>">
                    <a href="<%= url_for :controller => 'admin/reports', :action => 'index' %>">
                        <i class="fa fa-tags"></i>
                        <span>Reports</span>
                    </a>
                </li>









              <li class="<%= controller.controller_name == 'admin_users' ? 'active active-bg': '' %>">
                <a href="<%= edit_admin_user_registration_path %>"><i class="fa fa-cogs" aria-hidden="true"></i>
                   Change Password</a>
              </li>
              <li>
                <a data-method="get" href="<%= destroy_admin_user_session_path %>"><i class="fa fa-sign-out"></i> Log Out </a>
              </li>
            </ul>
        </section>
    </aside>

    <div class="content-wrapper">
        <%= yield %>
    </div>

    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.3.0
        </div>

        <strong>Copyright &copy; 2015 iWAD.</strong> All rights reserved.
    </footer>
</div>


<script>
  var offset = - new Date().getTimezoneOffset()/60
  var timezone = moment.tz.guess();
  document.cookie = "browser.timezone="+timezone+"; expires=30; path=/";
</script>
</body>
</html>
