<!-- Main content -->
<section class="content">
    <div class="login-box">
        <div class="login-logo">
            <%= image_tag "logo-150.png" %>
        </div><!-- /.login-logo -->

        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group has-feedback">
                    <%= f.email_field :email, autofocus: true , class: 'form-control', placeholder:'Email',:required => '' %>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <%= f.password_field :password, autofocus: true , class: 'form-control', placeholder:'Password',:required => '' %>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <div class="checkbox icheck">
                            <label>
                                <%= f.check_box :remember_me %> Remember Me
                            </label>
                        </div>
                    </div><!-- /.col -->

                    <div class="col-xs-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div><!-- /.col -->
                </div>
            <% end %>
            <a href="<%= new_registration_path(resource_name) %>" class="text-center">Register</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
</section>